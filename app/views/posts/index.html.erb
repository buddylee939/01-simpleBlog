<!-- Page Header -->
<!-- <header class="masthead home-bg" style="background-image: url('img/home-bg.jpg')"> -->
<header class="masthead home-bg">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Clean Blog</h1>
          <span class="subheading">A Blog Theme by Start Bootstrap</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
    	<% @posts.each do |post| %>
	      <div class="post-preview">
	      	<%= link_to post do %>
	          <h2 class="post-title">
	            <%= post.title %>
	          </h2>
	          <h3 class="post-subtitle">
	            <%= post.subtitle %>
	          </h3>					
	      	<% end %>
	      	<p class="post-meta">
	      		Posted by: <%= link_to 'User', '#' %> on <%= post.created_at.strftime("%A, %b %d") %>
	      	</p>
	      </div>	
	      <hr>			
    	<% end %>
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
      </div>
    </div>
  </div>
</div>

<hr>
