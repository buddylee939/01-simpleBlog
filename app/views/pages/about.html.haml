%header.masthead.about-bg
  .overlay
  .container
    .row
      .col-lg-8.col-md-10.mx-auto
        .page-heading
          %h1 About Me
          %span.subheading This is what I do.
/ Main Content
.container
  .row
    .col-lg-8.col-md-10.mx-auto
      - if !@about.nil?
        = simple_format(@about.content)
        = link_to 'Update Info', new_about_path, class: 'btn btn-primary'
      - else
        %p Add your about info
        = link_to 'Create Info', new_about_path, class: 'btn btn-primary'
%hr/
